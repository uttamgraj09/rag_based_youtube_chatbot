{
  "manifest_version": 3,
  "name": "YouTube RAG Chat",
  "version": "1.0",
  "description": "Chat with YouTube videos using AI",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}

